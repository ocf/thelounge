apiVersion: v1
kind: Service
metadata:
  name: service
spec:
  selector:
    app: thelounge
  ports:
    - port: 80
      targetPort: 9000
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: deployment
  labels:
    app: thelounge
spec:
  replicas: 1
  selector:
    matchLabels:
      app: thelounge
  template:
    metadata:
      labels:
        app: thelounge
    spec:
      containers:
        - name: thelounge
          image: "docker.ocf.berkeley.edu/thelounge:<%= version %>"
          resources:
            limits:
              memory: 512Mi
              cpu: 750m
          livenessProbe:
              httpGet:
                path: /
                port: 9000
              initialDelaySeconds: 10
              periodSeconds: 5
          ports:
            - containerPort: 9000
      dnsPolicy: ClusterFirst
      dnsConfig:
        searches:
          - ocf.berkeley.edu
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
spec:
  rules:
    - host: irc.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: service
              servicePort: 80
    - host: dev-irc.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: service
              servicePort: 80
